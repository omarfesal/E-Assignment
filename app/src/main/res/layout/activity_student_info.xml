<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mostafa.e_assignment.Student.StudentInfo"
    >


    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/user_photo" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Name :"
                android:textColor="@color/primary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Text_student_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="User Id :"
                android:textColor="@color/primary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Text_student_UserId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="E-mail :"
                android:textColor="@color/primary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Text_student_mail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="TextView"
                android:textSize="18sp" />

            <!--<TextView-->
                <!--android:id="@+id/textView16"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="40dp"-->
                <!--android:text="Courses :"-->
                <!--android:textColor="@color/primary"-->
                <!--android:textSize="24sp" />-->

            <!--<TextView-->
                <!--android:id="@+id/Text_courses"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp"-->
                <!--android:text="TextView"-->
                <!--android:textSize="18sp" />-->
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
